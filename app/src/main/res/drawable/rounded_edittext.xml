<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo suave -->
    <solid android:color="#FFFFFFFF" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde gris suave -->
    <stroke
        android:width="1.5dp"
        android:color="#DDDDDD" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
