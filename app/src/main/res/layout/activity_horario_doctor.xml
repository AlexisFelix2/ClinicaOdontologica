<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:id="@+id/main"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mi Horario Disponible"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Instrucción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configura tu horario disponible para recibir citas"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Lunes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lunes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchLunes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHorarioLunes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etLunesInicio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="09:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etLunesFin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="17:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Martes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Martes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchMartes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHorarioMartes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etMartesInicio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="09:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etMartesFin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="17:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Miércoles -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Miércoles"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchMiercoles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMiercolesNoDisponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Jueves -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jueves"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchJueves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHorarioJueves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etJuevesInicio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="09:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etJuevesFin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="17:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Viernes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Viernes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchViernes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHorarioViernes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etViernesInicio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etViernesFin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15:00"
                        android:textSize="16sp"
                        android:inputType="time"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarHorario"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Guardar Horario"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="#0099FF" />

    </LinearLayout>
</ScrollView>