<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".lobby">

    <!-- CONTENIDO PRINCIPAL (tu diseño actual) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F6F9">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header con Toolbar integrada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Botón del menú hamburguesa -->
                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_menu_tres"
                    android:contentDescription="Abrir menú" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:text="Hola, María"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:src="@drawable/ic_notifications" />
            </LinearLayout>

            <!-- Grid de opcciones (tu contenido actual se mantiene igual) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="20dp">

                <!-- Reservar cita -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="14dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:onClick="irAServicios">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar_add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Reservar cita"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agenda tu próxima visita"
                            android:textColor="#666"
                            android:textSize="13sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mis citas -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="14dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="irAMisCitas">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar_check" />

                        <TextView
                            android:text="Mis citas"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="#1A1A1A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Revisa tus citas programadas"
                            android:textSize="13sp"
                            android:textColor="#666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Servicios -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="14dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="irAServicios"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_services" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Servicios"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explora nuestros tratamientos"
                            android:textColor="#666"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mi perfil -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="14dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="irAMiPerfil">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_profile" />

                        <TextView
                            android:text="Mi perfil"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="#1A1A1A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Actualiza tus datos"
                            android:textSize="13sp"
                            android:textColor="#666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Próxima cita -->
            <TextView
                android:text="Próxima Cita"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1A1A1A"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Limpieza Dental"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:id="@+id/title_cita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Dra. Elena Torres"
                        android:layout_below="@id/title_cita"
                        android:layout_marginTop="4dp"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Mar, 28 de Mayo - 10:30 AM"
                        android:layout_below="@id/title_cita"
                        android:layout_marginTop="25dp"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:text="Ver detalles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#0099FF"
                        android:textColor="#fff"
                        android:onClick="verDetallesCita" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/limpieza_dental" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- NAVIGATION DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>