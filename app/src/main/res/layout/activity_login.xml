<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:paddingHorizontal="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Ícono superior -->
        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Título Bienvenida -->
        <TextView
            android:id="@+id/txtBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido/a de nuevo"
            android:textColor="#2D333A"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/iconUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Label Correo -->
        <TextView
            android:id="@+id/labelCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            android:textColor="#4A4A4A"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/txtBienvenido"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Input Correo -->
        <EditText
            android:id="@+id/inputCorreo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Introduce tu correo electrónico"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:background="@drawable/edittext_background"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelCorreo"/>

        <!-- Label Contraseña -->
        <TextView
            android:id="@+id/labelPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="#4A4A4A"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputCorreo"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Input Contraseña -->
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:hint="Introduce tu contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:background="@drawable/edittext_background"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelPass"/>

        <!-- ¿Olvidaste tu contraseña? -->
        <TextView
            android:id="@+id/forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="#0095FF"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/inputPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botón Iniciar Sesión -->
        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#0099FF"
            android:text="Iniciar Sesión"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:onClick="iniciarSesion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forgotPass"/>

        <!-- ¿No tienes una cuenta? -->
        <TextView
            android:id="@+id/registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes una cuenta? "
            android:textColor="#6C7A89"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnIniciar"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Enlace Regístrate -->
        <TextView
            android:id="@+id/registrateLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irARegistro"
            android:text="Regístrate"
            android:textColor="#0095FF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/registro"
            app:layout_constraintStart_toEndOf="@id/registro"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
