<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:padding="16dp"
    tools:context=".miscitas">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Próximas Citas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0096FF"
        android:layout_marginBottom="20dp" />

    <!-- Cita 1 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpieza Dental"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmada"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dra. Ana Torres"
            android:textColor="#666"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

          <ImageView
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:src="@drawable/ic_calendar_check"
              app:tint="#666" />  <!-- CORREGIDO: android:tint → app:tint -->

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Miércoles, 15 de Octubre"
              android:textColor="#666"
              android:layout_marginStart="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

          <ImageView
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:src="@drawable/ic_time"
              app:tint="#666" />  <!-- CORREGIDO: android:tint → app:tint -->

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="10:00 AM - 10:45 AM"
              android:textColor="#666"
              android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Detalles"
            android:layout_marginTop="12dp"
            android:backgroundTint="#0099FF"
            android:textColor="@android:color/white" />

      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Cita 2 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consulta de Ortodoncia"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dra. Isabel Luna"
            android:textColor="#666"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

          <ImageView
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:src="@drawable/ic_calendar_check"
              app:tint="#666" />  <!-- CORREGIDO: android:tint → app:tint -->

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Martes, 28 de Octubre"
              android:textColor="#666"
              android:layout_marginStart="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

          <ImageView
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:src="@drawable/ic_time"
              app:tint="#666" />  <!-- CORREGIDO: android:tint → app:tint -->

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="04:30 PM - 05:00 PM"
              android:textColor="#666"
              android:layout_marginStart="8dp" />

        </LinearLayout>

      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

  </LinearLayout>
</ScrollView>