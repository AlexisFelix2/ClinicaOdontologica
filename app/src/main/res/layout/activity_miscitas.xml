<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    tools:context=".miscitas">

    <!-- CONTENEDOR PRINCIPAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Volver"
                android:onClick="volverALobby" />

            <TextView
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Próximas Citas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0096FF" />
        </LinearLayout>

        <!-- SUBTÍTULO -->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revisa el detalle de tus próximas atenciones:"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- CONTENEDOR DINÁMICO PARA CITAS -->
        <LinearLayout
            android:id="@+id/contenedorCitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            <!-- Las tarjetas de citas se agregarán aquí dinámicamente -->
        </LinearLayout>

        <!-- TEXTO DE CARGA -->
        <TextView
            android:id="@+id/txtCargando"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando tus citas..."
            android:textSize="16sp"
            android:textColor="#666"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginTop="20dp"
            android:visibility="visible" />

        <!-- TEXTO SI NO HAY CITAS -->
        <TextView
            android:id="@+id/txtNoCitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tienes citas agendadas"
            android:textSize="16sp"
            android:textColor="#999"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>