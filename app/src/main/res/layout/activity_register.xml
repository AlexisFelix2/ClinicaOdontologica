<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_arrow_back"
            android:onClick="volverALogin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0096FF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CARD FORMULARIO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFormulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"/>

                <EditText
                    android:id="@+id/inputNombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Introduce tu nombre"
                    android:padding="12dp"
                    android:textColor="#2D333A"
                    android:textColorHint="#A4AAB3"
                    android:background="@drawable/edittext_background"/>

                <!-- Apellidos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:layout_marginTop="14dp"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"/>

                <EditText
                    android:id="@+id/inputApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Introduce tus apellidos"
                    android:padding="12dp"
                    android:textColor="#2D333A"
                    android:textColorHint="#A4AAB3"
                    android:background="@drawable/edittext_background"/>

                <!-- DNI -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI / NIE"
                    android:layout_marginTop="14dp"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"/>

                <EditText
                    android:id="@+id/inputDNI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Introduce tu documento"
                    android:padding="12dp"
                    android:textColor="#2D333A"
                    android:textColorHint="#A4AAB3"
                    android:background="@drawable/edittext_background"/>

                <!-- Teléfono -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:layout_marginTop="14dp"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"/>

                <EditText
                    android:id="@+id/inputTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Introduce tu teléfono"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="#2D333A"
                    android:textColorHint="#A4AAB3"
                    android:background="@drawable/edittext_background"/>

                <!-- Correo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:layout_marginTop="14dp"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"/>

                <EditText
                    android:id="@+id/inputCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Introduce tu correo"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="#2D333A"
                    android:textColorHint="#A4AAB3"
                    android:background="@drawable/edittext_background"/>

                <!-- Contraseña -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:layout_marginTop="14dp"
                    android:textSize="14sp"
                    android:textColor="#4A4A4A"/>

                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Introduce tu contraseña"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="#2D333A"
                    android:textColorHint="#A4AAB3"
                    android:background="@drawable/edittext_background"/>

                <!-- TÉRMINOS -->
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkTerminos"
                    android:layout_marginTop="18dp"
                    android:text="Acepto los Términos y Condiciones"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp"
                    android:buttonTint="#00A4FF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtVerTerminos"
                    android:layout_marginTop="4dp"
                    android:text="Ver Términos y Condiciones"
                    android:textSize="12sp"
                    android:textColor="#00A4FF"
                    android:gravity="center"
                    android:onClick="mostrarTerminos"/>

                <!-- BOTÓN -->
                <Button
                    android:id="@+id/btnRegistrarse"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#00A4FF"
                    android:onClick="registrarUsuario"
                    android:text="Registrarse"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <!-- LEGAL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/legal"
                    android:layout_marginTop="12dp"
                    android:text="Al registrarte, aceptas nuestros Términos y Condiciones y Política de Privacidad."
                    android:textSize="12sp"
                    android:textColor="#6C7A89"
                    android:gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
