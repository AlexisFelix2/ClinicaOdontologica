<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Botón atrás -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_back"
            android:onClick="volverALogin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Título Crear Cuenta -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0096FF"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtítulo grande -->
        <TextView
            android:id="@+id/txtSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu cuenta"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#2D333A"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="15sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtSubTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputNombre"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Introduce tu nombre"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/txtNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Apellidos -->
        <TextView
            android:id="@+id/txtApellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:textSize="15sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputNombre"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputApellidos"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Introduce tus apellidos"
            android:padding="12dp"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/txtApellidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- DNI -->
        <TextView
            android:id="@+id/txtDNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI / NIE"
            android:textSize="15sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputApellidos"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputDNI"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Introduce tu documento de identidad"
            android:padding="12dp"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/txtDNI"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Teléfono -->
        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textSize="15sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputDNI"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputTelefono"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Introduce tu número de teléfono"
            android:padding="12dp"
            android:inputType="phone"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/txtTelefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Correo -->
        <TextView
            android:id="@+id/txtCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            android:textSize="15sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputTelefono"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputCorreo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Introduce tu correo electrónico"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/txtCorreo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contraseña -->
        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="15sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputCorreo"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Introduce tu contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#2D333A"
            android:textColorHint="#A4AAB3"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toBottomOf="@id/txtPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón Registrarse -->
        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#00A4FF"
            android:fontFamily="sans-serif-medium"
            android:onClick="registrarUsuario"
            android:text="Registrarse"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputPassword" />

        <!-- Texto legal -->
        <TextView
            android:id="@+id/legal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Al registrarte, aceptas nuestros Términos y Condiciones y nuestra Política de Privacidad."
            android:textSize="12sp"
            android:textColor="#6C7A89"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegistrarse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>