<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".doctores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_back"
                android:onClick="volverALobby" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Selecciona un Doctor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0096FF" />
        </LinearLayout>

        <!-- CONTENEDOR DINÁMICO PARA DOCTORES -->
        <LinearLayout
            android:id="@+id/contenedorDoctores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- Las tarjetas de doctores se agregarán aquí dinámicamente desde Firebase -->

        </LinearLayout>

        <!-- TEXTO DE CARGA -->
        <TextView
            android:id="@+id/txtCargando"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando doctores disponibles..."
            android:textSize="16sp"
            android:textColor="#666"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="visible" />

        <!-- TEXTO SI NO HAY DOCTORES -->
        <TextView
            android:id="@+id/txtNoDoctores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay doctores disponibles en este momento"
            android:textSize="16sp"
            android:textColor="#999"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone" />

        <!-- DOCTORES DE EJEMPLO (solo para pruebas/emergencia) -->
        <!-- Doctor 1 - Mantenido para pruebas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDoctorElena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:onClick="seleccionarDoctorElena">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_white"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dra. Elena Torres"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Odontología General"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 años de experiencia"
                        android:textSize="13sp"
                        android:textColor="#666"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Doctor 2 - Mantenido para pruebas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDoctorCarlos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:onClick="seleccionarDoctorCarlos">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_white"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Carlos Ramírez"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ortodoncia"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 años de experiencia"
                        android:textSize="13sp"
                        android:textColor="#666"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>