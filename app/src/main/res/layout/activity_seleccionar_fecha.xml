<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_back"
                android:onClick="volverAtras"/>

            <TextView
                android:layout_marginStart="12dp"
                android:text="Selecciona Fecha y Hora"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0096FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Servicio Seleccionado -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="Servicio Seleccionado"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtServicio"
                    android:text="Limpieza Dental Profesional"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0099FF"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Duración: 45 min"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Selector de Mes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnMesAnterior"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="‹"
                android:textColor="#0099FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMesAnio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Octubre 2024"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#1A1A1A"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnMesSiguiente"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="›"
                android:textColor="#0099FF"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Días -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="D"
                android:textColor="#666"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="L"
                android:textColor="#666"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="M"
                android:textColor="#666"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="M"
                android:textColor="#666"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="J"
                android:textColor="#666"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="V"
                android:textColor="#999"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="S"
                android:textColor="#999"
                android:textStyle="bold" />
        </LinearLayout>

        <GridView
            android:id="@+id/gridCalendario"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:numColumns="7"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="8dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/txtHorariosTitle"
            android:text="Selecciona una fecha para ver horarios"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:id="@+id/gridHorarios"
            android:columnCount="2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnConfirmarHorario"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Confirmar Horario"
            android:enabled="false"
            android:backgroundTint="#E0E0E0"
            android:textColor="#999"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
